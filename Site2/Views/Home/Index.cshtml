@model Site2.Models.Tables
@{ ViewBag.Title = "ParitetProm"; }

@section navigation{
<ul class="nav nav-pills">
    <li class="active">@Html.ActionLink("Прайс", "Index")</li>
    <li class="">@Html.ActionLink("Вывоз/Доставка", "About")</li>
    <li class="">@Html.ActionLink("Контакты", "Info")</li>
</ul>
}
<h2>Цены на заготовки</h2>
<h4>Квадраты</h4>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Размер/Диаметр</th>
            <th>Сталь</th>
            <th>Цена (за тонну)</th>
            @*<th>Примечание</th>*@
        </tr>
    </thead>

    @foreach (var item in Model.T1.Items)
    {
        <tr>
            <td>@item.Size</td>
            <td>@item.SteelMark</td>
            <td>@item.Price</td>
            @*<td>@item.Note</td>*@
        </tr>
    }
</table>

